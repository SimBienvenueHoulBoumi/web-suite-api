// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContentType {
  ANIME
  MANGA
  WEBTOON
}

enum WatchStatus {
  WATCHING
  COMPLETED
  PLAN_TO_WATCH
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  profile   Profile?
  watchlist Watchlist[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  name   String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int    @unique
}

model Content {
  id         Int         @id @default(autoincrement())
  title      String      @unique
  type       ContentType
  episodes   Int?
  chapters   Int?
  watchlists Watchlist[]
}

model Watchlist {
  id        Int     @id @default(autoincrement())
  userId    Int
  contentId Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  status      WatchStatus
  currentEp   Int?
  currentChap Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, contentId]) // Un utilisateur ne peut suivre un mÃªme contenu qu'une seule fois
}
